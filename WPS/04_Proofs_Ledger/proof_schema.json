{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RevReady Snapshot Proof",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "snapshot_id": {
      "type": "string"
    },
    "timestamp_utc": {
      "type": "string"
    },
    "merkle_root": {
      "type": "string"
    },
    "chunk_count": {
      "type": "integer"
    },
    "signing": {
      "type": "object",
      "properties": {
        "alg": {
          "type": "string"
        },
        "pub": {
          "type": "string"
        },
        "sig": {
          "type": "string"
        }
      },
      "required": [
        "alg",
        "pub",
        "sig"
      ]
    }
  },
  "required": [
    "schema_version",
    "snapshot_id",
    "timestamp_utc",
    "merkle_root",
    "chunk_count",
    "signing"
  ]
}